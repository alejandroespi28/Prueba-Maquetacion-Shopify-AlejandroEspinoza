@font-face {
  font-family: 'HelveticaNeue';
  src: url('https://cdn.shopify.com/s/files/1/0718/8129/4051/files/HelveticaNeueUltraLight.ttf') format('truetype');
  font-style: normal;
  font-weight: 100;
}
@font-face {
  font-family: 'HelveticaNeue';
  src: url('https://cdn.shopify.com/s/files/1/0718/8129/4051/files/HelveticaNeueLight.ttf') format('truetype');
  font-weight: 300;
}
@font-face {
  font-family: 'HelveticaNeue';
  src: url('https://cdn.shopify.com/s/files/1/0718/8129/4051/files/HelveticaNeueRoman.ttf') format('truetype');
  font-weight: 500;
}
@font-face {
  font-family: 'HelveticaNeue';
  src: url('https://cdn.shopify.com/s/files/1/0718/8129/4051/files/HelveticaNeueUltraMedium.ttf') format('truetype');
  font-weight: 700;
}
@font-face {
  font-family: 'HelveticaNeue';
  src: url('https://cdn.shopify.com/s/files/1/0718/8129/4051/files/HelveticaNeueHeavy.ttf') format('truetype');
  font-weight: 800;
}
* {
    box-sizing: border-box;
    box-sizing: border-box;
    box-shadow: unset;
    overflow-anchor: none;
    -webkit-tap-highlight-color: transparent;
    margin: 0px;
    padding: 0px;
    outline: 0px;
}
:root{
  --primary-color: #cbe346;
  --white: #fff;
  --black: #1e2335;
  --dark-three: #282e47;
  --yellow: #cbe346;
  --gray: #787878;
  --padding-x-content: clamp(140px, calc(140px + (173 - 140)*((100vw - 1024px) /(1440 - 1024))),173px);
  --padding-y-btn: clamp(11.5px, calc(11.5px + (15 - 11.5)*((100vw - 1024px) /(1440 - 1024))),15px);
  --padding-x-btn: clamp(23px, calc(23px + (30 - 23)*((100vw - 1024px) /(1440 - 1024))),30px);
  --margin-bottom-title: clamp(18px, calc(18px + (30 - 18)*((100vw - 1024px) /(1440 - 1024))), 30px);
  --size-buttons-slide: clamp(38.4px, calc(38.4px + (54 - 38.4)*((100vw - 1024px) /(1440 - 1024))), 54px);
}
a {
    color: inherit;
    text-decoration: none;
}
body {
    margin: 0;
    overflow-x: hidden;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    -webkit-text-size-adjust: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
img.img-responsive {
    max-width: 100%;
    display: block;
}
.txt-yellow{
  color: var(--yellow)
}
.txt-white{
  color: var(--white)
}
.txt-black{
  color: var(--black)
}
.txt-gray{
  color: var(--gray)
}

/*HEADER*/
.header-main-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 25px clamp(20px, calc(20px + (40 - 20)*((100vw - 1024px) /(1440 - 1024))),40px);
    z-index: 2;
    transition: 0.35s ease-in-out;
}
.container-header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.header-left {
    display: flex;
    align-items: flex-end;
    grid-column-gap: clamp(80px,calc(80px + (100 - 80)*((100vw - 1024px) /(1440 - 1024))),100px);
}
svg.icon-store-logo path {
    fill: var(--white);
    transition: 0.35s ease-in-out;
}
a:hover svg.icon-store-logo path {
    fill: var(--yellow);
}
.header-label {
    font-family: "HelveticaNeue";
    font-weight: 300;
    font-size: clamp(13px, calc(13px + (16 - 13)*((100vw - 1024px) /(1440 - 1024))),16px);
    letter-spacing: 1.5px;
    color: var(--white);
}
.menu-hamburguer-mobile,
.btn-close-menu.activate_menu_mobile{
    display: none;
}
.list-menu {
    display: flex;
    align-items: center;
    grid-column-gap: clamp(20px, calc(20px + (42 - 20)*((100vw - 1024px) /(1440 - 1024))),42px);
}
.header-menu-link::after {
    content: "";
    width: 0px;
    height: 2px;
    display: block;
    background: var(--white);
    top: 10px;
    position: relative;
    transition: 0.15s ease-in-out;
}
.header-label.active {
    font-weight: bold;
}
.header-menu-link.active::after, .header-menu-link:hover::after{
    width: 17px;
}
.header-main-wrapper.sticky {
    background: var(--white);
}
.header-main-wrapper.sticky span.header-label, 
.header-main-wrapper.sticky .header-label {
    color: var(--black);
}
.header-main-wrapper.sticky svg.icon-store-logo path{ 
    fill: var(--yellow);
}
.header-main-wrapper.sticky .header-menu-link:after{
    background: var(--black);
}
.header-main-wrapper.sticky .header-left,
.header-main-wrapper.sticky .container-header{
    align-items: center;
}
/*HEADER*/


/*BANNER*/
.banner-content-container::before {
    content: "";
    width: 2px;
    height: 100%;
    position: absolute;
    top: 0;
    left: clamp(80px, calc(80px + (105 - 80)*((100vw - 1024px) /(1440 - 1024))),105px);
    background: var(--white);
}
.banner-content-container {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
}
.banner-content {
    position: absolute;
    width: 100%;
    padding: 0 var(--padding-x-content);
}
.title-banner strong {
    color: var(--yellow);
}
.title-banner {
    font-family: 'HelveticaNeue';
    font-size: clamp(36px,calc(36px + (53 - 36)*((100vw - 1024px) /(1440 - 1024))),53px);
    width: calc(50% + var(--padding-x-content));
    color: var(--white);
    font-weight: 400;
    letter-spacing: -0.05px;
    line-height: clamp(46px,calc(46px + (68 - 46)*((100vw - 1024px) /(1440 - 1024))),68px);
    margin-top: 0;
}
.btn {
    font-family: HelveticaNeue;
    font-size: clamp(10px, calc(10px + (13 - 10)*((100vw - 1024px) /(1440 - 1024))), 13px);
    font-weight: 700;
    letter-spacing: 1.01px;
    line-height: clamp(21.5px, calc(21.5px + (28 - 21.5)*((100vw - 1024px) /(1440 - 1024))), 28px);;
    border-radius: 26.5px;
    padding: var(--padding-y-btn) calc(var(--padding-x-btn) + 6px) var(--padding-y-btn) var(--padding-x-btn);
    transition: 0.35s ease-in-out;
    min-width: clamp(180px, calc(180px + (234 - 180)*((100vw - 1024px) /(1440 - 1024))), 234px);
    height: clamp(40.7px, calc(40.7px + (53 - 40.7)*((100vw - 1024px) /(1440 - 1024))), 53px);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: fit-content;
}
.btn-transparent-white{
    border: 1px solid var(--white);
    color: var(--white);
}
.btn:hover {
    box-shadow: inset 5px 5px 10px 50px var(--yellow);
}
.btn:after {
    content: "\2192";
    font-size: clamp(16px,calc(16px + (22 - 16)*((100vw - 1024px) /(1440 - 1024))),22px);
    margin-left: 8px;
    color: #fefefe;
    font-family: system-ui;
    line-height: 0;
    height: 0px;
    display: inline-block;
    position: relative;
    top: -2px;
    width: 23px;
}
.header-right {
    margin-right: clamp(24px, calc(24px + (54 - 24)*((100vw - 1024px) /(1440 - 1024))), 54px);
    display: flex;
    grid-column-gap: 18px;
}
.banner-content-container h1 {
    margin-bottom: var(--margin-bottom-title);
}
/*BANNER END*/


/*HISTORIA CONTAINER*/
.about-description-container {
    background: #f3f4f8;
    padding-top: clamp(74px, calc(74px + (104 - 74)*((100vw - 1024px) /(1440 - 1024))), 104px);
    padding-bottom: clamp(47.5px, calc(47.5px + (67 - 47.5)*((100vw - 1024px) /(1440 - 1024))), 67px);
    display: flex;
}
.secondary-title {
    font-family: 'HelveticaNeue';
    font-size: clamp(10.5px, calc(10.5px + (50 - 10.5)*((100vw - 1024px) /(1440 - 1024))), 15px);
    line-height: 30px;
    letter-spacing: 1.87px;
}
.subtitle-section {
    font-family: 'HelveticaNeue';
    font-size: clamp(35.5px, calc(35.5px + (50 - 35.5)*((100vw - 1024px) /(1440 - 1024))), 50px);
    line-height: clamp(40.5px, calc(40.5px + (50 - 40.5)*((100vw - 1024px) /(1440 - 1024))), 57px);
    letter-spacing: -0.06px;
    font-weight: 500;
}
.secondari-title-conta {
    margin-right: clamp(36px, calc(36px + (51 - 36)*((100vw - 1024px) /(1440 - 1024))), 51px);
    margin-left: clamp(181px, calc(181px + (255 - 181)*((100vw - 1024px) /(1440 - 1024))), 255px);
    width: clamp(128px, calc(128px + (174 - 128)*((100vw - 1024px) /(1440 - 1024))), 174px);
    text-align: right;
    margin-top: 10px;
}
.description-container {
    width: clamp(394.5px, calc(394.5px + (555 - 394.5)*((100vw - 1024px) /(1440 - 1024))), 555px);
}
.text-general {
    font-family: 'HelveticaNeue';
    font-size: clamp(13px, calc(13px + (18 - 13)*((100vw - 1024px) /(1440 - 1024))), 18px);
    line-height: clamp(23px, calc(23px + (32 - 23)*((100vw - 1024px) /(1440 - 1024))), 32px);
    letter-spacing: 0.51px;
    font-weight: 400;
}
.btn-transparent-black {
    border: 1px solid var(--dark-three);
    color: var(--dark-three);
}
.btn-transparent-black::after {
    color: var(--dark-three);
}
.button-container {
    display: flex;
    align-items: flex-end;
}
.about-description-container .description-container .text-general {
    padding-right: clamp(115px, calc(115px + (162 - 115)*((100vw - 1024px) /(1440 - 1024))), 162px);
    margin-top: var(--margin-bottom-title);
    height: clamp(60px, calc(60px + (84 - 60)*((100vw - 1024px) /(1440 - 1024))), 84px);
    display: flex;
    align-items: center;
}
/*HISTORIA CONTAINER END*/

/*CARRUSEL PRODUCTOS*/
.products-image-container{
    display: flex;
    align-items: center;
}
.carrusel-products {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-left: 55px;
}
a.swiper-slide {
    margin-right: 36px;
}
.swiper-wrapper{
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    display: flex;
    transition-property: transform;
    box-sizing: initial;
}
.iage-cover-container {
    position: relative;
}
.cover-content-category {
    position: absolute;
    width: 100%;
    padding-left: clamp(142px,calc(142px + (200 - 142)*((100vw - 1024px) /(1440 - 1024))),200px);
    padding-right: 27px;
    top: clamp(34px,calc(34px + (48 - 34)*((100vw - 1024px) /(1440 - 1024))),48px);
}
.controls-slider-products .swiper-pagination {
    display: flex;
    grid-column-gap: clamp(17px, calc(17px + (24 - 17)*((100vw - 1024px) /(1440 - 1024))), 24px);
    margin-top: clamp(10px, calc(10px + (14 - 10)*((100vw - 1024px) /(1440 - 1024))), 14px);
}
.controls-slider-products span.swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    background: #ebebeb;
    border-radius: 16px;
    transition: 0.35s ease-in-out;
    cursor: pointer;
}
.controls-slider-products .swiper-pagination-bullet.swiper-pagination-bullet-active, 
.controls-slider-products .swiper-pagination-bullet:hover {
    background: var(--yellow);
}
a.swiper-slide::before {
    content: attr(data-position-product);
    font-family: 'HelveticaNeue';
    font-size: 17px;
    position: absolute;
    line-height: 30px;
    width: 39px;
    height: 39px;
    background: var(--yellow);
    color: var(--white);
    border-radius: 37px;
    display: flex;
    align-items: center;
    justify-content: center;
    top: 11px;
    margin-left: 15px;
}
.cover-content-category .text-general {
    height: clamp(86.7px, calc(86.7px + (122 - 86.7)*((100vw - 1024px) /(1440 - 1024))), 122px);
    display: flex;
    align-items: center;
}
.cover-content-category .subtitle-section {
    line-height: clamp(45.5px, calc(45.5px + (64 - 45.5)*((100vw - 1024px) /(1440 - 1024))), 64px);
}
.swiper-container-buttons {
    display: flex;
    grid-column-gap: 19px;
    margin-top: 35.2px;
}
.swiper-container-buttons .swiper-button {
    width: var(--size-buttons-slide);
    height: var(--size-buttons-slide);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotate(90deg);
    cursor: pointer;
    transition: 0.35s ease-in-out;
    background: var(--yellow);
    border: 1px solid var(--yellow);
}
.swiper-container-buttons .swiper-button.swiper-button-prev {
    transform: rotate(-90deg);
}
.swiper-container-buttons .swiper-button:hover {
    box-shadow: 0px 0px 14px #00000057;
}
.swiper-container-buttons .swiper-button.swiper-button-disabled{
    border: 1px solid var(--white);
    background: none;
    box-shadow: none;
    cursor: not-allowed;
}
.iage-cover-container .image-container {
    width: clamp(376.8px, calc(376.8px + (530 - 376.8)*((100vw - 1024px) /(1440 - 1024))), 530px);
    height: clamp(332px, calc(332px + (468 - 332)*((100vw - 1024px) /(1440 - 1024))), 468px);
}
.iage-cover-container .image-container img {
    width: 100%;
    height: 100%;
    position: absolute;
}
.carrusel-products .swiper-slide img{
    width: clamp(205px, calc(205px + (288 - 205)*((100vw - 1024px) /(1440 - 1024))), 288px);
}
/*CARRUSEL PRODUCTOS*/


/*Footer*/
.footer-label {
    font-family: 'HelveticaNeue';
    font-size: 13px;
    color: var(--dark-three);
    letter-spacing: 1.14px;
    font-weight: 500;
}
footer.footer-container {
    background: var(--yellow);
    padding: clamp(45.5px, calc(45.5px + (64 - 45.5)*((100vw - 1024px) /(1440 - 1024))), 64px) clamp(45.5px, calc(45.5px + (64 - 45.5)*((100vw - 1024px) /(1440 - 1024))), 64px) clamp(41px, calc(41px + (58 - 41)*((100vw - 1024px) /(1440 - 1024))), 58px) clamp(62.5px, calc(62.5px + (78 - 62.5)*((100vw - 1024px) /(1440 - 1024))), 78px);
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.footer-menu-link.footer-label.active {
    font-weight: 800;
}
.nav-footer-list {
    display: flex;
    grid-column-gap: 36.75px;
    height: 37px;
    align-items: center;
}
.social-media-container {
    display: flex;
    grid-column-gap: 12px;
    margin-top: 13px;
}
.logo-footer-container svg{
    width: clamp(39px, calc(39px + (55 - 39)*((100vw - 1024px) /(1440 - 1024))), 55px);
    height: clamp(39px, calc(39px + (55 - 39)*((100vw - 1024px) /(1440 - 1024))), 55px);
}
.logo-footer-container a:hover svg path {
    fill: var(--dark-three);
}
/*Footer end*/


@media(max-width:1024px){
  .title-banner{
      font-size: clamp(24px, calc(24px + (36 - 24)*((100vw - 674px) /(1024 - 674))), 36px);
  }
  :root{
    --padding-x-content: clamp(100px, calc(100px + (140 - 100)*((100vw - 674px) /(1024 - 674))),140px);
  }
  .secondari-title-conta {
    margin-right: clamp(20px, calc(20px + (36 - 20)*((100vw - 674px) /(1024 - 674))), 36px);
    margin-left: clamp(140px, calc(140px + (181 - 140)*((100vw - 674px) /(1024 - 674))), 181px);
    width: clamp(100px, calc(100px + (128 - 100)*((100vw - 674px) /(1024 - 674))), 128px);
  }
  .about-description-container .button-container {
    width: 100%;
    justify-content: center;
    margin-top: 30px;
  }
  .about-description-container {
    flex-wrap: wrap;
  }
  .subtitle-section {
    font-size: clamp(25px, calc(25px + (35.5 - 25)*((100vw - 1024px) /(1440 - 1024))), 35.5px);
  }
  .cover-content-category {
    padding: 0 30px;
  }
}
@media(max-width:674px){
  .products-image-container {
    flex-wrap: wrap;
    justify-content: center;
  }
  .carrusel-products {
    margin: 0;
    padding: 20px;
  }
  .nav-list.list-menu {
    position: fixed;
    height: 100%;
    top: 0;
    left: 0;
    background: var(--dark-three);
    flex-direction: column;
    grid-row-gap: 30px;
    width: 0;
    transition: 0.35s ease-in-out;
    overflow: hidden;
    padding-top: 100px;
  }
  .nav-list.list-menu.showing_menu {
    width: 100%;
  }
  .menu-hamburguer-mobile,
  .btn-close-menu.activate_menu_mobile{
    display: unset;
  }
  .header-left {
    width: 50%;
    justify-content: space-between;
  }
  .sticky svg.icon-hamburger path {
    stroke: var(--dark-three);
  }
  .header-left > a {
    order: 2;
  }
  .header-main-wrapper.sticky .header-label {
    color: var(--white);
  }
  .header-main-wrapper.sticky .header-menu-link:after {
    background: var(--white);
  }
  .btn-close-menu.activate_menu_mobile {
    position: absolute;
    top: 20px;
    right: 20px;
    color: #fff;
    font-size: 20px;
    font-family: 'HelveticaNeue';
  }
  footer.footer-container {
    padding: 30px 15px;
  }
  .nav-footer-list {
    flex-direction: column;
    height: auto;
    grid-row-gap: 20px;
    margin-bottom: 30px;
    align-items: flex-start;
  }
  .swiper-container-buttons, .controls-slider-products .swiper-pagination {
    justify-content: center;
  }
  .cover-content-category {
        text-align: center;
  }
  .description-container {
    padding: 0 20px;
  }
  .about-description-container .button-container {
    justify-content: flex-start;
    margin-top: 20px;
    padding-left: 20px;
  }
  .about-description-container .description-container .text-general {
    margin-top: 0;
  }
  .secondari-title-conta {
    margin: 0;
    width: auto;
    padding-left: 20px;
  }
  .about-description-container {
    padding: 74px 0;
  }
  .banner-content {
    padding: 0 30px;
    bottom: 15%;
  }
  .banner-image::after {
    content: "";
    background: #00000047;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }
  .banner-content-container:before{
    display: none;
  }
}