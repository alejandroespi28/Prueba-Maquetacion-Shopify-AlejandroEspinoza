// Agregar clase al enlace si se encuentra en su href (header)
let links = document.querySelectorAll('.header-menu-link');
links.forEach(link => {
  if (link.href === window.location.href) {
    link.classList.add('active');
  }
});
  
// Función para agregar la clase 'sticky' al navbar cuando se hace scroll
const navbar = document.querySelector('.header-main-wrapper');
const sticky = navbar.offsetTop;
function stickyNavbar() {
  if (window.pageYOffset > sticky) {
    navbar.classList.add('sticky');
  } else {
    navbar.classList.remove('sticky');
  }
}

// Ejecuta la función cuando el usuario hace scroll
window.onscroll = function() {
  stickyNavbar();
};


// Agregar clase al enlace si se encuentra en su href (footer)
const links_footer = document.querySelectorAll('.footer-menu-link');
links_footer.forEach(link => {
  if (link.href === window.location.href) {
    link.classList.add('active');
  }
});

// Función para abrir el menú en mobile
const btns_toggle_menu = document.querySelectorAll(".activate_menu_mobile");
btns_toggle_menu.forEach((btn_toggle_menu) =>{ 
  btn_toggle_menu.addEventListener("click", function(){
    document.querySelector(".nav-list.list-menu").classList.toggle("showing_menu");
  })
})


// Agregar las redes sociales del footer en el menú mobile
let execute_content = false;
function add_social_media(){
  if(window.innerWidth <= 674 && !execute_content){
    const container_social_media_footer = document.querySelector(".social-media-container").cloneNode(true);
    execute_content = true;
    document.querySelector(".nav-list.list-menu").appendChild(container_social_media_footer);
  } 
}
window.addEventListener("load", function(){
  add_social_media();
})
window.addEventListener("resize", function(){
  add_social_media();
})